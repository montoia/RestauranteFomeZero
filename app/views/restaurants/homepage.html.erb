<p id="notice"><%= notice %></p>

<h1>Homepage</h1>

<table>
  <thead>
  <tr>
    <th>Descricao</th>
    <th>Preco</th>
    <th>Tempopreparo</th>
    <th>Ingredients</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @plates.each do |plate| %>
    <tr>
      <td><%= plate.descricao %></td>
      <td><%= plate.preco %></td>
      <td><%= plate.tempopreparo %></td>
      <td><%= plate.ingredients.map(&:descricao).join(',') %>

    </tr>
  <% end %>
  </tbody>
</table>

<br>
